<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NationalAnthem">

    <com.github.barteksc.pdfviewer.PDFView
        android:id="@+id/pdfnationalanthem"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ProgressBar
        android:id="@+id/progressanthem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

    <ImageButton
        android:id="@+id/imageanthem"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_gravity="end"
        android:layout_marginTop="137dp"
        android:layout_marginEnd="57dp"
        android:layout_marginStart="70dp"
        android:background="@drawable/imageanthembtn"
        android:onClick="gotovideoview"
        android:padding="-10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/circlehands" />

</FrameLayout>